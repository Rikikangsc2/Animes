<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Saved Anime - PURNIME TV</title>
  <link rel="icon" href="https://telegra.ph/file/082d11505390a7ec238ed.jpg" type="image/x-icon">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body { background-color: #121212; color: #e0e0e0; }
    .anime-thumbnail { max-height: 230px; border-radius: 10px; }
    .card {
      border: 1px solid #333;
      background-color: #1e1e1e;
    }
    .card-title {
      font-size: 1.2rem;
      font-weight: 600;
      color: #ffbf00;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    .card-text {
      font-size: 0.9rem;
      color: #bbb;
    }
    .btn-watch {
      background-color: #4caf50;
      border: none;
      border-radius: 5px;
      padding: 8px 16px;
      font-size: 0.9rem;
      color: #fff;
    }
    .btn-watch:hover {
      background-color: #43a047;
    }
    .btn-delete {
      background-color: #e64a19;
      border: none;
      border-radius: 5px;
      padding: 8px 16px;
      font-size: 0.9rem;
      color: #fff;
    }
    .btn-delete:hover {
      background-color: #d32f2f;
    }
    .nav-link {
        color: #ffffff;
    }
    .nav-link:hover {
        color: #ffbf00;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Saved Anime</h1>
    <script type="text/javascript">
      atOptions = {
        'key' : 'dd8ebba365a2d1ae7ca5e92744e27e1f',
        'format' : 'iframe',
        'height' : 250,
        'width' : 300,
        'params' : {}
      };
    </script>
    <script type="text/javascript" src="//www.topcreativeformat.com/dd8ebba365a2d1ae7ca5e92744e27e1f/invoke.js"></script>
    <nav class="navbar navbar-dark bg-dark mb-3">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Home</a>
        <div class="d-flex">
          <a class="nav-link" href="/save"><i class="fas fa-bookmark"></i> Saved Anime</a>
        </div>
          <a class="nav-link" href="/search"><i class="fas fa-search"></i> Search</a>
      </div>
    </nav>
    <div id="anime-list" class="row row-cols-1 row-cols-md-3 g-4"></div>
  </div>

  <script>
    const basenya = 'https://api-otakudesu-livid.vercel.app';  // replace with your base API URL

    // Fetch saved anime from server
    async function getSavedAnime() {
      try {
        const response = await fetch('/api/bookmarks');
        return await response.json();
      } catch (error) {
        console.error('Error fetching saved anime:', error);
        return [];
      }
    }

    // Fetch anime details
    async function fetchAnimeDetail(animeId) {
      try {
        const response = await fetch(`${basenya}/api/v1/detail/${animeId}`);
        return await response.json();
      } catch (error) {
        console.error('Error fetching anime detail:', error);
        return null;
      }
    }

    // Render the saved anime list
    async function renderSavedAnime() {
      const animeList = document.getElementById('anime-list');
      animeList.innerHTML = '';

      const bookmarks = await getSavedAnime();
      if (bookmarks.length === 0) {
        animeList.innerHTML = `
          <div class="col">
            <div class="alert alert-warning text-center" role="alert">
              <h1>Gak ada anime yang di save</h1>
            </div>
          </div>
        `;
        return;
      }

      const animeDetails = await Promise.all(bookmarks.map(fetchAnimeDetail));

      animeDetails.forEach(anime => {
        if (anime) {
          const lastEpisode = "#";
          animeList.innerHTML += `
            <div class="col">
              <div class="card h-100 text-white">
                <a href="/anime/${anime.anime_detail.id}/${lastEpisode}" style="text-decoration: none;">
                  <div class="card-body">
                    <h5 class="card-title">${anime.anime_detail.title}</h5>
                    <a href="/anime/${anime.anime_detail.id}/${lastEpisode}" class="btn btn-watch"><i class="fas fa-play"></i> Tonton</a>
                    <button class="btn btn-delete" onclick="deleteAnime('${anime.anime_detail.id}')"><i class="fas fa-trash-alt"></i> Hapus</button>
                  </div>
                </a>
              </div>
            </div>
          `;
        }
      });
    }

    // Delete anime from saved list
    function deleteAnime(animeId) {
      fetch('/delete/' + animeId, { method: 'POST' })
        .then(response => {
          if (response.ok) {
            renderSavedAnime();
          }
        })
        .catch(error => console.error('Error deleting anime:', error));
    }

    // Initialize the page
    document.addEventListener('DOMContentLoaded', renderSavedAnime);
  </script>
</body>
</html>
